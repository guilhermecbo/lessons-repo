
import java.util.Scanner;
public class Triangulo {

	public static void main(String[] args) {
		
		// Declaração das variáveis chamado o resultado dos métodos

		int alt = lerAltura();		
		
		for(int i=alt; i>0; i--) {
		    for(int j=0; j<i; j++) System.out.print(" ");
			for(int j=i-1; j<alt; j++) System.out.print("X");
		    
		    for(int j=i; j<alt; j++) System.out.print("X");
		    System.out.println();
		}

	}//------------------------------------------------
	
	static int lerAltura(){
		int a = 0;
		int contErro = 0;
		Scanner teclado = new Scanner(System.in);
		do{			
			System.out.print("Digite o valor para a altura [5 - 15]: ");
			a = teclado.nextInt();
			if (a < 5 || a > 15){
				// Incremento da variável de controle de erros.
				contErro++;
				System.out.println("Valor fora do intervalo! Você errou "+contErro+" vezes!\n");
					if (contErro == 3){
						// O usuário errou 3 vezes e o programa será encerrado.
						System.out.println("Você errou "+contErro+" vezes! Programa encerrado!\n");
						System.exit(0);
					}
			}
		}while (a < 5 || a > 15);
		return a;
	}//------------------------------------------------
	
}//----------------------------------------------------
